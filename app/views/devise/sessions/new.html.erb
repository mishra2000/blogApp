<div style="height:100vh;width:100%;padding-left:10px">
<br/>
<h2 style="color:Black">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%# <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email Id" ,class:"form-label",style:"border-radius:5px"%>
  </div>

  <div class="field">
    <%# <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "current-password",placeholder:"password" ,class:"form-label",style:"border-radius:5px"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me,class:"form-label",style:"background:none" %>
      <%= f.label :remember_me ,style:"color:black"%>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" ,class:"btn btn-dark"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
